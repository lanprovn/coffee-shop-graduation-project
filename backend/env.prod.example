# Coffee Shop Production Environment Variables
# Copy this file to .env and modify values as needed

# Spring Profiles
SPRING_PROFILES_ACTIVE=prod

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Database Names
POSTGRES_USERS_DB=coffeeshop_users
POSTGRES_PRODUCTS_DB=coffeeshop_products
POSTGRES_ORDERS_DB=coffeeshop_orders
POSTGRES_PAYMENTS_DB=coffeeshop_payments
POSTGRES_LOYALTY_DB=coffeeshop_loyalty
POSTGRES_NOTIFICATIONS_DB=coffeeshop_notifications
POSTGRES_ANALYTICS_DB=coffeeshop_analytics
POSTGRES_STORES_DB=coffeeshop_stores

# Database Ports
POSTGRES_USERS_PORT=5432
POSTGRES_PRODUCTS_PORT=5433
POSTGRES_ORDERS_PORT=5434
POSTGRES_PAYMENTS_PORT=5435
POSTGRES_LOYALTY_PORT=5436
POSTGRES_NOTIFICATIONS_PORT=5437
POSTGRES_ANALYTICS_PORT=5438
POSTGRES_STORES_PORT=5439

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Service Discovery
EUREKA_URL=http://eureka-server:8761/eureka/
EUREKA_HOSTNAME=eureka-server
EUREKA_SELF_PRESERVATION=true
EUREKA_EVICTION_INTERVAL=60000
EUREKA_RENEWAL_THRESHOLD=0.85

# Service Ports
EUREKA_PORT=8761
API_GATEWAY_PORT=8080
USER_SERVICE_PORT=8081
PRODUCT_SERVICE_PORT=8082
ORDER_SERVICE_PORT=8083
PAYMENT_SERVICE_PORT=8084
LOYALTY_SERVICE_PORT=8085
NOTIFICATION_SERVICE_PORT=8086
ANALYTICS_SERVICE_PORT=8087
STORE_SERVICE_PORT=8088

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=1000
RATE_LIMIT_BURST=2000

# JPA Configuration
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# Logging Configuration
LOG_LEVEL=INFO
SPRING_LOG_LEVEL=WARN
HIBERNATE_LOG_LEVEL=WARN
EUREKA_LOG_LEVEL=INFO
DISCOVERY_LOG_LEVEL=INFO
GATEWAY_LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/coffeeshop

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Notification Settings
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_FROM=noreply@coffeeshop.com
SMS_NOTIFICATIONS_ENABLED=false
SMS_PROVIDER=
PUSH_NOTIFICATIONS_ENABLED=true
FIREBASE_SERVER_KEY=your_firebase_server_key

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# Database Host (for external connections)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coffeeshop_users
DB_USERNAME=postgres
DB_PASSWORD=password
